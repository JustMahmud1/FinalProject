@using Entities.Concrete;
@using Entities.DTOs.PropertyDTOs;
@model PropertyPostDto
@{
	ViewData["Title"] = "Create";
}

<div class="row" style="margin-top:150px ; display:flex ; justify-content:center ; align-items:center">
	<div class="col-md-6 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Elan yarat</h4>
				<p class="card-description">Eviniz haqqında məlumatları daxil edin</p>
				<form method="post" class="forms-sample" enctype="multipart/form-data">
					<div class="form-group">
						<label asp-for="Title">Başlıq</label>
						<input asp-for="Title" class="form-control" placeholder="Title">
						<span class="text-danger" asp-validation-for="Title"></span>
					</div>
					<div class="form-group">
						<label asp-for="Description">Açıqlama</label>
						<input asp-for="Description" class="form-control" placeholder="Description">
						<span class="text-danger" asp-validation-for="Description"></span>
					</div>
					<div class="form-group">
						<label asp-for="Price">Qiymət</label>
						<input asp-for="Price" type="number" class="form-control" placeholder="Price">
						<span class="text-danger" asp-validation-for="Price"></span>
					</div>
					<div class="form-group">
						<label asp-for="Area">Ərazi</label>
						<input asp-for="Area" type="number" class="form-control" placeholder="Area">
						<span class="text-danger" asp-validation-for="Area"></span>
					</div>
					<div class="form-group">
						<label asp-for="Location">Adres</label>
						<input asp-for="Location" class="form-control" placeholder="Location">
						<span class="text-danger" asp-validation-for="Location"></span>
					</div>
					<div class="form-group">
						<label asp-for="Rooms">Otaq sayı</label>
						<input asp-for="Rooms" type="number" class="form-control" placeholder="Rooms">
						<span class="text-danger" asp-validation-for="Rooms"></span>
					</div>
					<div class="form-check" style="margin-left:-1.25rem">
						<label asp-for="HasGarage" class="form-check-label"></label>
						<input asp-for="HasGarage" class="form-check-input" style="margin-left:0.5rem" placeholder="Garage">
						<span class="text-danger" asp-validation-for="HasGarage"></span>
					</div>
					<div class="form-group">
						<label asp-for="FormFiles">Şəkillər</label>
						<input asp-for="FormFiles" class="form-control">
						<span class="text-danger" asp-validation-for="FormFiles"></span>
					</div>
					<div class="form-check form-check-inline" style="flex-direction: column !important; justify-content:start; width: 100% !important">
						<label>Özəlliklər</label> <br />
						<div class="pretty">
							@foreach (var item in ViewBag.Amenities)
							{
								<div class="manual-item">
									<input name="AmenitiesIds" class="form-check-input" style="margin:0%" type="checkbox" value="@item.Id">
									<label class="form-check-label" style="width:max-content">@item.Value</label>
								</div>
							}
						</div>
							<span asp-validation-for="AmenitiesIds" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<select asp-for="PropertyType">
							<option>@PropertyTypeEnum.Həyət</option>
							<option>@PropertyTypeEnum.Bina</option>
						</select>
					</div>
					<button type="submit" class="btn btn-success me-2 mt-2">Submit</button>
					<button class="btn btn-light">Cancel</button>
				</form>
			</div>
		</div>
	</div>
</div>

