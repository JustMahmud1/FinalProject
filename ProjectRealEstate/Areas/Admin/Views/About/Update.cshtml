@using Entities.DTOs.AboutDTOs;
@model AboutUpdateDto
@{
    ViewData["Title"] = "Update";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-sm-12 col-xl-6">
			<div class="bg-secondary rounded h-100 p-4">
				<h6 class="mb-4">Basic Form</h6>
				<form method="post" enctype="multipart/form-data">
					<input hidden asp-for="@Model.aboutGetDto.Id">
					<div class="mb-3">
						<label asp-for="@Model.aboutPostDto.Title" class="form-label"></label>
						<input asp-for="@Model.aboutPostDto.Title" value="@Model.aboutGetDto.Title" class="form-control">
						<span asp-validation-for="@Model.aboutGetDto.Title"></span>
					</div>
					<div class="mb-3">
						<label asp-for="@Model.aboutPostDto.Description" class="form-label"></label>
						<input asp-for="@Model.aboutPostDto.Description" value="@Model.aboutGetDto.Description" class="form-control">
						<span asp-validation-for="@Model.aboutGetDto.Description"></span>
					</div>
					<div class="mb-3">
						<label asp-for="@Model.aboutPostDto.ImageDescription" class="form-label"></label>
						<input asp-for="@Model.aboutPostDto.ImageDescription" value="@Model.aboutGetDto.ImageDescription" class="form-control">
						<span asp-validation-for="@Model.aboutPostDto.ImageDescription"></span>
					</div>
					<div class="mb-3">
						<label asp-for="@Model.aboutPostDto.ImageSubDescription" class="form-label"></label>
						<input asp-for="@Model.aboutPostDto.ImageSubDescription" value="@Model.aboutGetDto.ImageSubDescription" class="form-control">
						<span asp-validation-for="@Model.aboutPostDto.ImageSubDescription"></span>
					</div>
					<div class="mb-3">
						<label asp-for="@Model.aboutPostDto.DescriptionHeader" class="form-label"></label>
						<input asp-for="@Model.aboutPostDto.DescriptionHeader" value="@Model.aboutGetDto.DescriptionHeader" class="form-control">
						<span asp-validation-for="@Model.aboutPostDto.DescriptionHeader"></span>
					</div>
					<div class="mb-3">
						<label asp-for="@Model.aboutPostDto.Image1" class="form-label"></label>
						<input asp-for="@Model.aboutPostDto.Image1" value="@Model.aboutGetDto.Image1" class="form-control">
						<span asp-validation-for="@Model.aboutPostDto.Image1"></span>
					</div>
					<div class="mb-3">
						<label asp-for="@Model.aboutPostDto.Image2" class="form-label"></label>
						<input asp-for="@Model.aboutPostDto.Image2" value="@Model.aboutGetDto.Image2" class="form-control">
						<span asp-validation-for="@Model.aboutPostDto.Image2"></span>
					</div>
					<button type="submit" class="btn btn-primary">Update</button>
				</form>
			</div>
		</div>
	</div>
</div>
