@using Entities.DTOs.AboutDTOs;
@model AboutGetDto
@{
    ViewData["Title"] = "Index";
}

<div class="col-sm-12 col-xl-12 m-4">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Hoverable Table</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image 1 Description</th>
                    <th scope="col">Image 1 SubDescription</th>
                    <th scope="col">Description Header</th>
                    <th scope="col">Image 1</th>
                    <th scope="col">Image 2</th>
                    <th scope="col">CRUD</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <th scope="row">@Model.Id</th>
                    <td>@Model.Title</td>
                    <td>@Model.Description</td>
                    <td>@Model.ImageDescription</td>
                    <td>@Model.ImageSubDescription</td>
                    <td>@Model.DescriptionHeader</td>
                    <td><img src="~/assets/img/@Model.Image1" style="height:50px ; width:50px"></td>
                    <td><img src="~/assets/img/@Model.Image2" style="height:50px ; width:50px"></td>
                    <td>
                        <a asp-controller="About" asp-action="Update" asp-route-Id="@Model.Id" type="button" class="btn btn-outline-warning">Update</a>
                    </td>
                </tr>

            </tbody>
        </table>
    </div>
</div>



