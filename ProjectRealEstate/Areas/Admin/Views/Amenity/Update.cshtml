@using Entities.DTOs.AmenityDTOs;
@model AmenityUpdateDto
@{
    ViewData["Title"] = "Update";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-sm-12 col-xl-6">
			<div class="bg-secondary rounded h-100 p-4">
				<h6 class="mb-4">Basic Form</h6>
				<form method="post" asp-controller="Amenity" asp-action="Update" enctype="multipart/form-data">
					<input hidden asp-for="@Model.amenityGetDto.Id">
					<div class="mb-3">
						<label asp-for="@Model.amenityPostDto.Value" class="form-label"></label>
						<input asp-for="@Model.amenityPostDto.Value" value="@Model.amenityGetDto.Value" class="form-control">
						<span asp-validation-for="@Model.amenityPostDto.Value"></span>
					</div>
					<button type="submit" class="btn btn-primary">Update</button>
				</form>
			</div>
		</div>
	</div>
</div>

